@model IdentityRole
@{
    Layout = "_IdentityLayout";
}

<h5 class="bg-primary text-white text-center p-2">Create Role</h5>
<form asp-action="CreateRole" method="post" style="width:450px">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label>Role Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-secondary" asp-action="@nameof(WS.WebApp.Controllers.RoleController.RoleIndex)">Back</a>
</form>