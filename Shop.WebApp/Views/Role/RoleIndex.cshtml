@model Dictionary<IdentityRole, string>
@{
    Layout = "_IdentityLayout";
}

<table class="table table-sm table-bordered">
    <tr><th>Name</th><th>ID</th><th>Members</th><th></th></tr>
    @if (Model.Count == 0)
    {
        <tr><td colspan="4" class="text-center">No Roles</td></tr>
    }
    else
    {
        foreach (KeyValuePair<IdentityRole, string> roleUser in Model)
        {
            <tr>

                <td>@roleUser.Key.Name</td>
                <td>@roleUser.Key.Id</td>
                <td>@roleUser.Value</td>
                <td class="text-center">
                    <form asp-action="DeleteRole" method="post">
                        <input hidden name="id" value="@roleUser.Key.Id" />
                        <a asp-action="EditRole" asp-route-id="@roleUser.Key.Id" class="btn btn-sm btn-warning">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a asp-action="CreateRole" class="btn btn-primary">Create</a>
