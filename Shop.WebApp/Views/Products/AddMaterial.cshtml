@model ProductMaterialCreationViewModel
@using WS.Models;

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>View</h1>

<h4>ProductMaterial</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMaterial" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input hidden asp-for="ProductMaterial.WSProductId" name="WSProductId" value="@Model.productId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ProductMaterial.WSMaterialId" class="control-label">Material</label>
                <select class="dropdown" asp-for="ProductMaterial.WSMaterialId" name="WSMaterialId">
                    <option selected value="" hidden>-- Select Material --</option>
                    @foreach (WSMaterial m in Model.Materials)
                    {
                        <option value="@m.Id">@m.MaterialName</option>
                    }
                </select>
                <span asp-validation-for="ProductMaterial.WSMaterialId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductMaterial.CountInProduct" class="control-label">Quantity</label>
                <input asp-for="ProductMaterial.CountInProduct" name="CountInProduct" class="form-control" />
                <span asp-validation-for="ProductMaterial.CountInProduct" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductMaterial.CountUnit" class="control-label">Unit of Mesurment</label>
                <select asp-for="ProductMaterial.CountUnit" name="CountUnit" asp-items="Html.GetEnumSelectList<CountUnit>()">
                    <option selected hidden value="">-- Select Mesurment Unit --</option>
                </select>
                <span asp-validation-for="ProductMaterial.CountUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Edit" asp-route-id="@Model.productId">Back to Product</a>
            </div>
        </form>
    </div>
</div>