@model User
@inject IViewLocalizer Localizer
@{
    Layout = "_Layout";
}

<div class="bg-primary text-white text-center p-2"><h4>@Localizer["Register User"]</h4></div>
<form asp-action="CreateUser" method="post" class="m-1" style="width:450px">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control"  />
        <span asp-validation-for="LastName" class="text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserName">@Localizer["User Name"]</label>
        <input asp-for="UserName" class="form-control"  />
        <span asp-validation-for="UserName" class="text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">@Localizer["Email"]</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" ></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="UserName" class="text text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">@Localizer["Submit"]</button>
    <a class="btn btn-secondary" asp-action="@nameof(WS.WebApp.Controllers.HomeController.Index)">@Localizer["Back"]</a>
</form>