@model MaterialCreationViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>WSMaterial</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>Id</label>
        </dt>
        <dd class = "col-sm-10">
            <input disabled asp-for="Material.Id" />
        </dd>
        <dt class = "col-sm-2">
            <label>Material Name</label>
        </dt>
        <dd class = "col-sm-10">
            <input disabled asp-for="Material.MaterialName" />
        </dd>
        <dt class = "col-sm-2">
            <label>Supplier</label>
        </dt>
        <dd class = "col-sm-10">
            <select disabled class="dropdown">
                <option selected>@Model.Suppliers.FirstOrDefault().SupplierName</option>
            </select>
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed" method="post">
        <input hidden name="id" value="@Model.Material.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
