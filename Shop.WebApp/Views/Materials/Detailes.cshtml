@model WSMaterial

@{
    ViewData["Title"] = "Detailes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detailes</h1>

<div>
    <h4>WSMaterial</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>Id</label>
        </dt>
        <dd class="col-sm-10">
            <input disabled asp-for="Id" />
        </dd>
        <dt class="col-sm-2">
            <label>Material Name</label>
        </dt>
        <dd class="col-sm-10">
            <input disabled asp-for="MaterialName" />
        </dd>
        <dt class="col-sm-2">
            <label>Supplier</label>
        </dt>
        <dd class="col-sm-10">
            <select disabled class="dropdown">
                <option selected>@Model.Supplier.SupplierName</option>
            </select>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
